{{!-- <h2>burgers that are not devoured!</h2> --}}

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block sleep=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block sleep=false}}
  {{/if}}
  {{/each}}
</ul>

